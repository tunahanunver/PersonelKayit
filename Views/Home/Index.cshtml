@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-4">
    <h1 class="display-4">Personel Kayıt Sistemi</h1>
    <p class="lead">Personel, lokasyon ve media yönetimi için geliştirilmiş web uygulaması.</p>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Personel İşlemleri</h5>
                <p class="card-text">Personel kayıt, güncelleme ve silme işlemlerini gerçekleştirebilirsiniz.</p>
                <a asp-controller="Personel" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Personel Listesi
                </a>
                <a asp-controller="Personel" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Yeni Personel
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-geo-alt-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Lokasyon Yönetimi</h5>
                <p class="card-text">Ülke, şehir ve ilçe bilgilerini görüntüleyebilirsiniz.</p>
                <a asp-controller="Lokasyon" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Lokasyonları Görüntüle
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex justify-content-center mb-3">
                    <i class="bi bi-file-person text-primary me-3" style="font-size: 3rem;"></i>
                    <i class="bi bi-collection-fill text-secondary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title mt-3">Personel Medya & Medya Kütüphanesi</h5>
                <p class="card-text">Personel medya ve medya kütüphanesi bilgilerini görüntüleyebilirsiniz.</p>
                <a asp-controller="PersonelMedya" asp-action="Index" class="btn btn-primary me-2">
                    <i class="bi bi-arrow-right"></i> Personel Medya
                </a>
                <a asp-controller="Mk" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> Medya Kütüphanesi
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-mortarboard-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Personel Eğitim</h5>
                <p class="card-text">Personel eğitim bilgilerini görüntüleyebilirsiniz.</p>
                <a asp-controller="PersonelEgitim" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Personel Eğitim
                </a>
            </div>
        </div>
    </div>
</div>

