@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-4">
    <h1 class="display-4">Personel Kayıt Sistemi</h1>
    <p class="lead">Personel, lokasyon ve media yönetimi için geliştirilmiş web uygulaması.</p>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Personel İşlemleri</h5>
                <p class="card-text">Personel kayıt, güncelleme ve silme işlemlerini gerçekleştirebilirsiniz.</p>
                <a asp-controller="Personel" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Personel Listesi
                </a>
                <a asp-controller="Personel" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Yeni Personel
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-geo-alt-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Lokasyon Yönetimi</h5>
                <p class="card-text">Ülke, şehir ve ilçe bilgilerini görüntüleyip yönetebilirsiniz.</p>
                <a asp-controller="Lokasyon" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Lokasyonları Görüntüle
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-file-person text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Personel Media</h5>
                <p class="card-text">Personel media bilgilerini görüntüleyip yönetebilirsiniz.</p>
                <a asp-controller="PersonelMedya" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Personel Media
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-collection-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Media Kütüphanesi</h5>
                <p class="card-text">Media kütüphanesi bilgilerini görüntüleyip yönetebilirsiniz.</p>
                <a asp-controller="Mk" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Media Kütüphanesi
                </a>
            </div>
        </div>
    </div>
</div>

