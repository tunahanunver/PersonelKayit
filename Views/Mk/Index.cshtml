@model IEnumerable<PersonelKayit.Models.MedyaKutuphanesi>

@{
	ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Media Kütüphanesi</h1>
        @* <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Lokasyon Ekle
        </a> *@
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PersonelMedyaId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MedyaAdi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MedyaGuid)
                            </th>
                            @* <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th class="text-end">İşlemler</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PersonelMedyaId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedyaAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedyaGuid)
                                </td>
                                @* <td>@Html.DisplayFor(modelItem => item.Description)</td> *@
                                <td class="text-end">
                                    @* <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="bi bi-info-circle"></i> Detay
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </div> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
